@using RealStateApp.Core.Application.ViewModels.SaleType
@model List<SaleTypeViewModel>
@{
    ViewData["Title"] = "Tipos de Ventas";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-4">
        <h2>Lista de Tipos de Ventas</h2>
        <a asp-controller="SaleType" asp-action="Create" class="btn btn-outline-success">Añadir Tipo de Venta</a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            No hay tipos de ventas disponibles.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Cantidad de Propiedades</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var saleType in Model)
                {
                    <tr>
                        <td>@saleType.Name</td>
                        <td>@saleType.Description</td>
                        <td>@saleType.PropertiesQuantity</td>
                        <td>
                            <a asp-controller="SaleType" asp-action="Edit" asp-route-id="@saleType.Id" class="btn btn-sm btn-outline-info">Editar</a>
                            <a asp-controller="SaleType" asp-action="Delete" asp-route-id="@saleType.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-right mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Atrás</a>
        </div>
    }
</div>

