@{
    ViewData["Title"] = "Seleccione el Tipo de Usuario";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-lg border-0 rounded">
            <div class="card-header bg-dark text-white text-center">
                <h2 class="fw-bold mb-0">Seleccione el Tipo de Usuario</h2>
            </div>
            <div class="card-body text-center">
                <p class="lead mb-4">Elija el tipo de cuenta que desea registrar.</p>
                <div class="d-grid gap-3">
                    <a asp-controller="User" asp-action="Register" asp-route-userRole="Customer" class="btn btn-outline-info btn-lg">
                        <i class="bi bi-person-circle me-2"></i>Cliente
                    </a>
                    <a asp-controller="User" asp-action="Register" asp-route-userRole="Agent" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-people-fill me-2"></i>Agente
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
