@using RealStateApp.Core.Application.ViewModels.User;
@model UpdateUserViewModel

@{
    ViewData["Title"] = "Editar informacion del usuario";
    var userRole = ViewBag.UserRole as string;
    bool agent = userRole == "Agent";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>Editar informacion del usuario @userRole</h4>
                </div>
                @if (Model.HasError)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <p>@Model.Error</p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <div class="card-body">
                    <form method="post" asp-controller="Maintenance" asp-action="Edit" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">Nombre: </label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                         <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Apellido: </label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cedula" class="form-label">Cedula: </label>
                            <input asp-for="Cedula" class="form-control" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="File" class="form-label">Foto de perfil: </label>
                            <input asp-for="File" class="form-control" type="file" name="File" />
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Nombre de usuario: </label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Contraseña: </label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar contraseña: </label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Telefono: </label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Correo: </label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="IsActive" value="@Model.IsActive"/>

                        <button type="submit" class="btn btn-primary" asp-route-userRole="@userRole">Guardar</button>

                        @if (agent)
                        {
                            <a asp-controller="Maintenance" asp-action="Profile" asp-route-id="@Model.Id" class="btn btn-warning">Volver atras</a>
                        }
                        else
                        {
                            <a asp-controller="Maintenance" asp-action="Index" asp-route-userRole="@userRole" class="btn btn-warning">Volver atras</a>
                        }

                    </form>

                </div>

            </div>
        </div>
    </div>

</div>

