@using RealStateApp.Core.Application.ViewModels.Improvement;
@model SaveImprovementViewModel
@{
    ViewData["Title"] = "Eliminar mejora";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>¿Está seguro que desea eliminar esta mejora: @Model.Name?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Improvement" asp-action="Delete">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Improvement" asp-action="Index" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>
